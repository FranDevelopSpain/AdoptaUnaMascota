<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/dialog_animal_name"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Nombre del animal" />

    <EditText
        android:id="@+id/dialog_animal_categoria"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Categoria" />

    <EditText
        android:id="@+id/dialog_animal_subcategoria"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="SubCategoria" />

    <EditText
        android:id="@+id/dialog_animal_sexo"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Sexo" />

    <EditText
        android:id="@+id/dialog_animal_raza"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Raza del animal" />

    <EditText
        android:id="@+id/dialog_animal_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="DescripciÃ³n del animal" />

</LinearLayout>
