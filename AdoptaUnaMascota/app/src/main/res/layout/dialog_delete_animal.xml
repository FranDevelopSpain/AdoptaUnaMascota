<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">
    <EditText
        android:id="@+id/dialog_animal_name"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Nombre" />

    <EditText
        android:id="@+id/dialog_animal_species"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Especie" />

    <EditText
        android:id="@+id/dialog_animal_breed"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Raza" />

    <EditText
        android:id="@+id/dialog_animal_age"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Edad" />

    <EditText
        android:id="@+id/dialog_animal_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="120dp"
        android:gravity="top"
        android:hint="DescripciÃ³n" />
</LinearLayout>
