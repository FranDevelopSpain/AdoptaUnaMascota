<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/dialog_animal_name"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Nombre del animal" />

    <EditText
        android:id="@+id/dialog_animal_species"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Especie del animal" />

    <EditText
        android:id="@+id/dialog_animal_gender"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Genero del animal" />

    <EditText
        android:id="@+id/dialog_animal_breed_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Raza del animal" />

    <EditText
        android:id="@+id/dialog_animal_age"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Edad del animal"
        android:inputType="number" />

    <RadioGroup
        android:id="@+id/dialog_animal_type_radio_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/dialog_animal_type_dog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Perro" />

        <RadioButton
            android:id="@+id/dialog_animal_type_cat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gato" />

    </RadioGroup>

    <EditText
        android:id="@+id/dialog_animal_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="DescripciÃ³n del animal" />

    <ImageView
        android:id="@+id/dialog_animal_image"
        android:layout_width="match_parent"
        android:layout_height="183dp" />

    <Button
        android:id="@+id/dialog_animal_select_image"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Seleccionar imagen" />

</LinearLayout>
